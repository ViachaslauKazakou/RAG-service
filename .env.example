# Переменные окружения для RAG Service
# Скопируйте этот файл в .env и настройте под ваши нужды

# Database
POSTGRES_URL=postgresql+asyncpg://docker:docker@localhost:5433/postgres
POSTGRES_DB=postgres
POSTGRES_USER=docker
POSTGRES_PASSWORD=docker

# AI Manager
AI_MANAGER_URL=http://localhost:8002

# Application
LOG_LEVEL=info
ENV=production
PYTHONPATH=/app

# Redis (если используется)
REDIS_URL=redis://localhost:6379

# HuggingFace (опционально)
HF_HOME=/app/.cache/huggingface
TRANSFORMERS_CACHE=/app/.cache/transformers

# Ollama
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# Security (для продакшн)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring (опционально)
SENTRY_DSN=""
PROMETHEUS_MULTIPROC_DIR=/tmp
