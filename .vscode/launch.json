    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI Local",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port=8001"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "HF_HOME": "/tmp/hf_cache",
                "TRANSFORMERS_CACHE": "/tmp/hf_cache"
            },
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Poetry: FastAPI Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port=8001",
                "--host=0.0.0.0"
            ],
            "jinja": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach to Container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Python: Run in Container Shell",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_container.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}